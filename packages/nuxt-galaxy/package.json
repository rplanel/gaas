{
  "name": "nuxt-galaxy",
  "type": "module",
  "version": "0.0.3-alpha.5",
  "packageManager": "pnpm@10.4.1",
  "description": "Galaxy module for Nuxt",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rplanel/gaas.git"
  },
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "pnpm run dev:prepare && nuxt-module-build build",
    "dev": "nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "release:publish": "pnpm publish --access public",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit",
    "cleandep": "rm -rf node_modules && rm -rf .nuxt && rm -rf dist && rm -rf playground/node_modules && rm -rf playground/.nuxt && rm -rf playground/.output",
    "supabase:status": "pnpm supabase --workdir src/runtime status",
    "supabase:start": "pnpm supabase --workdir src/runtime start",
    "supabase:stop": "pnpm supabase --workdir src/runtime stop",
    "supabase:db:reset": "pnpm supabase --workdir src/runtime db reset",
    "supabase:migration:new": "pnpm supabase --workdir src/runtime migration new",
    "supabase:migration:up": "pnpm supabase --workdir src/runtime migration up",
    "supabase:migration:galaxy:create": "pnpm run supabase:migration:new bucket && sleep .5 && pnpm run drizzle:generate && sleep .5 && pnpm run supabase:migration:new galaxy && sleep .5 && pnpm run supabase:migration:new realtime && sleep .5 && pnpm run supabase:migration:new rbac && sleep .2 && pnpm run supabase:migration:new rls",
    "supabase:generate:types": "pnpm supabase --workdir src/runtime gen types typescript --local > src/runtime/types/database.ts",
    "drizzle:generate": "pnpm drizzle-kit generate"
  },
  "dependencies": {
    "@nuxt/kit": "catalog:",
    "@nuxtjs/supabase": "catalog:",
    "blendtype": "workspace:*",
    "defu": "catalog:",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "jwt-decode": "catalog:",
    "postgres": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@nuxt/devtools": "catalog:",
    "@nuxt/eslint-config": "catalog:",
    "@nuxt/module-builder": "catalog:",
    "@nuxt/schema": "catalog:",
    "@nuxt/test-utils": "catalog:",
    "@release-it/conventional-changelog": "catalog:",
    "@types/node": "catalog:",
    "@vue/test-utils": "catalog:",
    "changelogen": "catalog:",
    "eslint": "catalog:",
    "happy-dom": "catalog:",
    "nuxt": "catalog:",
    "playwright-core": "catalog:",
    "supabase": "catalog:",
    "typescript": "~5.6.3",
    "vitest": "catalog:",
    "vue-tsc": "catalog:"
  }
}
